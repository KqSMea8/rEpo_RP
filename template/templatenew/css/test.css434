.container-fluid.mainheader {
	background-color: #1C3146;
	margin-top: 0px;
	margin-bottom: 0px;
}
.container .pull-right .top-menu {
	margin-bottom: 10px;
	margin-right: 10px;
        margin-top: 10px;
}
.pull-right .top-menu li {
	display: inline-block;
	margin-right: 10px;
        color:#fff;

}
.top-menu li a {
	display: inline;
	/*float: left;*/
	margin-right: 0px;
	color: #FFFFFF;
	text-transform: uppercase;
}
.top-menu li a:hover{
	color: #BC572A;
	text-decoration: none;
}
.navbar navbar-default{
	margin-top: 20px;	
}
.dropdown.dropdown-lg .dropdown-menu {
    margin-top: -1px;
    padding: 7px 23px;
}
.input-group-btn .btn-group {
    display: flex !important;
}
.btn-group .btn {
    border-radius: 0;
    margin-left: -1px;
}
.btn-group .btn:last-child {
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}
.btn-group .form-horizontal .btn[type="submit"] {
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}
.form-horizontal .form-group {
    margin-left: 0;
    margin-right: 0;
}
.form-group .form-control:last-child {
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}

@media screen and (min-width: 768px) {
    #adv-search {
	width: 179px;
	margin: 0 -8px;
    }
    .dropdown.dropdown-lg {
        position: static !important;
    }
    .dropdown.dropdown-lg .dropdown-menu {
        min-width: 245px;
    }
}
#top_currency_id {
    width: 120px;
}

.currency {
    display: inline-block;
    float: left;
}
.footer h3{
	border-bottom: 1px solid #1c3146;
	color:#1c3146;
	font-size: 18px;
	font-weight: 600;
	line-height: 27px;
	padding: 40px 0 10px;
	text-transform: uppercase;	
}
.footer ul{
	font-size: 13px;
