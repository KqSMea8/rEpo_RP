<script type="text/javascript">

function chosevalue(selectedval){
	var request_CmpID=$('#request_CmpID').val();
	var name=$('#name').val();
	$('#EDITypeSelected').val(selectedval);
	$("#form1").submit();
	
	 $.fancybox.close();
	 
}

function selectitems(request_CmpID,name){
	$('#request_CmpID').val(request_CmpID);
	$('#name').val(name);
	$.fancybox({
        'type': 'inline',
        'href': '#dialogContent',
       'afterClose':function () {
		  
    		}
    }); 
		
	
	
}


</script>
